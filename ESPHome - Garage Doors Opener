esphome:
  name: garage-doors
  friendly_name: Modul Garaj
esp8266:
  board: nodemcuv2

# Enable logging
logger:

# Enable Home Assistant API
api:
  encryption:
    key: "XXX"

ota:

wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password
  ap:
    ssid: "Fallback Hotspot"
    password: XXX
output:
  # Register the blue LED as a dimmable output ....
  - platform: esp8266_pwm
    id: blue_led
    pin: D4
    inverted: True

light:
  # ... and then make a light out of it.
  - platform: monochromatic
    name: "Sonoff 4CH Blue LED"
    output: blue_led
    
interval:
  - interval: 1s
    then:
      if:
        condition:
          wifi.connected:
        then:
          - output.turn_on: blue_led
        else:
          - output.turn_off: blue_led





  # Enable fallback hotspot (captive portal) in case wifi connection fails


captive_portal:


switch:
  - platform: template
    name: "Virtual Lock"
    id: virtual_lock
    optimistic: true
  - platform: gpio
    pin: D5
    name: "Door relay 1"
    id: door_relay_1
    internal: true
    on_turn_on:
    - delay: 250ms
    - switch.turn_off: door_relay_1
  - platform: gpio
    pin: D8
    name: "Door relay 2"
    id: door_relay_2
    internal: true
    on_turn_on:
    - delay: 250ms
    - switch.turn_off: door_relay_2
    
binary_sensor:
  - platform: template
    name: "Garage Door 1 Is Jammed"
    id: is_jammed_1
    device_class: problem
  - platform: template
    name: "Garage Door 1 Is Open"
    id: is_open_1
    device_class: garage_door
  - platform: template
    name: "Garage Door 2 Is Jammed"
    id: is_jammed_2
    device_class: problem
  - platform: template
    name: "Garage Door 2 Is Open"
    id: is_open_2
    device_class: garage_door
    
  - platform: gpio
    pin:
      number: D1
      inverted: true
      mode:
        input: true
        pullup: true
    name: "Garage Door 1 Close Sensor"
    id: close_endstop_binary_sensor_1
    internal: true
    on_press:
       - cover.template.publish:
           id: garage_door_1
           state: CLOSED
           current_operation: IDLE
       - binary_sensor.template.publish:
          id: is_jammed_1
          state: OFF
       - binary_sensor.template.publish:
          id: is_open_1
          state: OFF
    on_release: 
       - cover.template.publish:
           id: garage_door_1
           current_operation: OPENING    
       - binary_sensor.template.publish:
          id: is_open_1
          state: ON
       - delay: 25s
       - if:
           condition:
             binary_sensor.is_off: open_endstop_binary_sensor_1
           then: 
              - binary_sensor.template.publish:
                  id: is_jammed_1
                  state: ON
  - platform: gpio
    pin:
      number: D2
      inverted: true
      mode:
        input: true
        pullup: true
    name: "Garage Door 1 Open Sensor"
    id: open_endstop_binary_sensor_1
    internal: true
    on_press:
       - cover.template.publish:
           id: garage_door_1
           state: OPEN
           current_operation: IDLE
       - binary_sensor.template.publish:
          id: is_jammed_1
          state: OFF
    on_release: 
       - cover.template.publish:
           id: garage_door_1
           current_operation: CLOSING  
       - delay: 25s
       - if:
           condition:
             binary_sensor.is_off: close_endstop_binary_sensor_1
           then: 
              - binary_sensor.template.publish:
                  id: is_jammed_1
                  state: ON
  - platform: gpio
    pin:
      number: D3
      inverted: true
      mode:
        input: true
        pullup: true
    name: "Garage Door 2 Close Sensor"
    id: close_endstop_binary_sensor_2
    internal: true
    on_press:
       - cover.template.publish:
           id: garage_door_2
           state: CLOSED
           current_operation: IDLE
       - binary_sensor.template.publish:
          id: is_jammed_2
          state: OFF
       - binary_sensor.template.publish:
          id: is_open_2
          state: OFF
    on_release: 
       - cover.template.publish:
           id: garage_door_2
           current_operation: OPENING    
       - binary_sensor.template.publish:
          id: is_open_2
          state: ON
       - delay: 25s
       - if:
           condition:
             binary_sensor.is_off: open_endstop_binary_sensor_2
           then: 
              - binary_sensor.template.publish:
                  id: is_jammed_2
                  state: ON
  - platform: gpio
    pin:
      number: D6
      inverted: true
      mode:
        input: true
        pullup: true
    name: "Garage Door 2 Open Sensor"
    id: open_endstop_binary_sensor_2
    internal: true
    on_press:
       - cover.template.publish:
           id: garage_door_2
           state: OPEN
           current_operation: IDLE
       - binary_sensor.template.publish:
          id: is_jammed_2
          state: OFF
    on_release: 
       - cover.template.publish:
           id: garage_door_2
           current_operation: CLOSING  
       - delay: 25s
       - if:
           condition:
             binary_sensor.is_off: close_endstop_binary_sensor_2
           then: 
              - binary_sensor.template.publish:
                  id: is_jammed_2
                  state: ON

sensor:
  - platform: wifi_signal
    name: "WiFi Signal"
    update_interval: 60s
    
cover:
  - platform: template
    id: garage_door_1
    name: "Garage Door 1"
    device_class: garage
    open_action:
        - if:
           condition:
             - and:
               - switch.is_off: virtual_lock
               - binary_sensor.is_on: close_endstop_binary_sensor_1
           then: 
             - switch.turn_on: door_relay_1
    close_action:
      - if:
           condition:
             - and:
               - switch.is_off: virtual_lock
               - binary_sensor.is_on: open_endstop_binary_sensor_1
           then: 
             - switch.turn_on: door_relay_1
    stop_action:
      - if:
           condition:
             - and:
               - switch.is_off: virtual_lock
               - binary_sensor.is_off: close_endstop_binary_sensor_1
               - binary_sensor.is_off: open_endstop_binary_sensor_1
           then: 
             - switch.turn_on: door_relay_1
  - platform: template
    id: garage_door_2
    name: "Garage Door 2"
    device_class: garage
    open_action:
        - if:
           condition:
             - and:
               - switch.is_off: virtual_lock
               - binary_sensor.is_on: close_endstop_binary_sensor_2
           then: 
             - switch.turn_on: door_relay_2
    close_action:
      - if:
           condition:
             - and:
               - switch.is_off: virtual_lock
               - binary_sensor.is_on: open_endstop_binary_sensor_2
           then: 
             - switch.turn_on: door_relay_2
    stop_action:
      - if:
           condition:
             - and:
               - switch.is_off: virtual_lock
               - binary_sensor.is_off: close_endstop_binary_sensor_2
               - binary_sensor.is_off: open_endstop_binary_sensor_2
           then: 
             - switch.turn_on: door_relay_2
